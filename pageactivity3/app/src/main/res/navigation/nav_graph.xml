<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.pageactivity3.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.pageactivity3.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_SecondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_third2Fragment"
            app:destination="@id/third2Fragment" />
        <action
            android:id="@+id/action_SecondFragment_to_third1Fragment"
            app:destination="@id/third1Fragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.pageactivity3.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" >
        <action
            android:id="@+id/action_thirdFragment_to_fourthFragment"
            app:destination="@id/fourthFragment" />
    </fragment>
    <fragment
        android:id="@+id/third2Fragment"
        android:name="com.example.pageactivity3.Third2Fragment"
        android:label="fragment_third2"
        tools:layout="@layout/fragment_third2" />
    <fragment
        android:id="@+id/third1Fragment"
        android:name="com.example.pageactivity3.Third1Fragment"
        android:label="fragment_third1"
        tools:layout="@layout/fragment_third1" />
    <fragment
        android:id="@+id/fourthFragment"
        android:name="com.example.pageactivity3.FourthFragment"
        android:label="fragment_fourth"
        tools:layout="@layout/fragment_fourth" >
        <action
            android:id="@+id/action_fourthFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>